<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>VCT RECORDS</h1>
      <p>Aquí encontrarás una gran variedad de productos al mejor precio.</p>
    </div>
  </div>
  
  <div class="row">
    {{#each products}}
      <div class="col-md-4">
        <div class="card mb-4 box-shadow">
          <img class="card-img-top" src="{{this.thumbnail}}" alt="{{this.title}}">
          <div class="card-body">
            <h4>{{this.title}}</h4>
            <p class="card-text">{{this.description}}</p>
            <p>Stock: {{this.stock}}</p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <a href="#" class="btn btn-sm btn-outline-secondary">Agregar al Carrito</a>
                <a href="#" class="btn btn-sm btn-outline-primary">Comprar</a>
              </div>
              <small class="text-muted">Precio: {{this.price}}</small>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
